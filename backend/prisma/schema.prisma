generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int                  @id @default(autoincrement())
  externalId String               @unique
  workouts   Workout[]
  feedbacks  TrainingFeedbackV2[]
  createdAt  DateTime             @default(now())

  /// Nawigacyjna relacja do konta logowania (AuthUser) – nie używana do logiki domenowej.
  authUser AuthUser? @relation("AuthUserToUser")

  /// Nawigacyjna relacja do profilu – dane preferencji/limitów.
  profile UserProfile? @relation("UserProfileToUser")

  @@index([externalId])
}

model Workout {
  id               Int                 @id @default(autoincrement())
  userId           Int
  user             User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  action           String
  kind             String
  summary          String
  raceMeta         String?
  // SQLite does not support native JSON; store as textified JSON string
  workoutMeta      String?
  tcxRaw           String?
  fitRaw           String? // base64 albo tekst (na start)
  raw              WorkoutRawTcx?
  source           String              @default("MANUAL_UPLOAD")
  sourceActivityId String?
  sourceUserId     String?
  /// Stabilny klucz deduplikacji per użytkownik (source + aktywność lub znormalizowany start/długość/dystans)
  dedupeKey        String
  feedback         TrainingFeedbackV2?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt

  @@unique([userId, dedupeKey], name: "userId_dedupeKey")
  @@index([userId])
  @@index([userId, createdAt])
  @@index([userId, source, sourceActivityId])
}

model WorkoutRawTcx {
  id        Int      @id @default(autoincrement())
  workoutId Int      @unique
  xml       String
  createdAt DateTime @default(now())
  workout   Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
}

model AuthUser {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  sessions     Session[]
  userId       Int       @unique
  user         User      @relation("AuthUserToUser", fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  id         Int       @id @default(autoincrement())
  token      String    @unique
  authUserId Int
  user       AuthUser  @relation(fields: [authUserId], references: [id])
  createdAt  DateTime  @default(now())
  expiresAt  DateTime?
  lastSeenAt DateTime?
}

model UserProfile {
  id               Int      @id @default(autoincrement())
  userId           Int      @unique
  user             User     @relation("UserProfileToUser", fields: [userId], references: [id], onDelete: Cascade)
  /// JSON/text, np. "[1,2,4,6]" – preferowane dni biegania (ISO: pon=1)
  preferredRunDays String? // textified JSON
  /// Preferowana nawierzchnia (np. "ROAD", "TRAIL") – na razie jako string
  preferredSurface String?
  /// Cele treningowe w formie JSON/text
  goals            String? // textified JSON
  /// Ograniczenia / konta w formie JSON/text
  constraints      String? // textified JSON
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model TrainingFeedbackV2 {
  id        Int      @id @default(autoincrement())
  workoutId Int      @unique
  workout   Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  /// JSON string - snapshot deterministyczny feedbacku
  feedback  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([workoutId])
}
